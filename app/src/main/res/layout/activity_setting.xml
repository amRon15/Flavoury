<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Setting_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="backpage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
        app:tint="@color/mainText_color" />

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Settings"
        android:textColor="@color/mainText_color"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/backbutton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/backbutton"
        app:layout_constraintTop_toBottomOf="@+id/backbutton" />

    <ImageButton
        android:id="@+id/setting_icon"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/setting_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/setting_title"
        app:layout_constraintTop_toBottomOf="@+id/setting_title"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/setting_acTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Account"
        android:textColor="@color/mainText_color"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/setting_icon"
        app:layout_constraintStart_toEndOf="@+id/setting_icon"
        app:layout_constraintTop_toTopOf="@+id/setting_icon"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/setting_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/mainText_color"
        app:layout_constraintEnd_toEndOf="@+id/setting_acTitle"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/setting_icon"
        app:layout_constraintTop_toBottomOf="@+id/setting_acTitle" />

    <TextView
        android:id="@+id/setting_editProfile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Edit profile"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/setting_line1"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/setting_line1"
        app:layout_constraintTop_toBottomOf="@+id/setting_line1" />

    <ImageButton
        android:id="@+id/setting_editProfile_btn"
        android:layout_width="22dp"
        android:layout_height="25dp"
        android:layout_marginStart="200dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/setting_editProfile_title"
        app:layout_constraintStart_toEndOf="@+id/setting_editProfile_title"
        app:layout_constraintTop_toTopOf="@+id/setting_editProfile_title"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />

    <TextView
        android:id="@+id/setting_changePw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Change password"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/setting_editProfile_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/setting_editProfile_title"
        app:layout_constraintTop_toBottomOf="@+id/setting_editProfile_title" />

    <ImageButton
        android:id="@+id/Setting_backbutton3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/setting_changePw_title"
        app:layout_constraintEnd_toEndOf="@+id/setting_editProfile_btn"
        app:layout_constraintStart_toStartOf="@+id/setting_editProfile_btn"
        app:layout_constraintTop_toTopOf="@+id/setting_changePw_title"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />

    <ImageView
        android:id="@+id/Setting_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="@+id/setting_changePw_title"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_changePw_title"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/setting_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Notifications"
        android:textColor="@color/mainText_color"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/Setting_text3"
        app:layout_constraintStart_toEndOf="@+id/Setting_text3"
        app:layout_constraintTop_toTopOf="@+id/Setting_text3" />

    <View
        android:id="@+id/setting_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/mainText_color"
        app:layout_constraintEnd_toEndOf="@+id/setting_notification_title"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="@+id/Setting_text3"
        app:layout_constraintTop_toBottomOf="@+id/setting_notification_title" />

    <TextView
        android:id="@+id/setting_noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Notifications"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/setting_line2"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="@+id/setting_line2"
        app:layout_constraintTop_toBottomOf="@+id/setting_line2" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/setting_noti_swtich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        app:layout_constraintBottom_toBottomOf="@+id/setting_noti_title"
        app:layout_constraintStart_toEndOf="@+id/setting_noti_title"
        app:layout_constraintTop_toTopOf="@+id/setting_noti_title"
        app:layout_constraintVertical_bias="0.714" />

    <ImageButton
        android:id="@+id/Setting_backbutton4"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/setting_noti_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/setting_noti_title"
        app:layout_constraintTop_toBottomOf="@+id/setting_noti_title"
        app:srcCompat="@drawable/baseline_notes_24" />

    <TextView
        android:id="@+id/setting_moreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="More"
        android:textColor="@color/mainText_color"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/Setting_backbutton4"
        app:layout_constraintStart_toEndOf="@+id/Setting_backbutton4"
        app:layout_constraintTop_toTopOf="@+id/Setting_backbutton4"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/setting_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/mainText_color"
        app:layout_constraintEnd_toEndOf="@+id/setting_moreTitle"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/Setting_backbutton3"
        app:layout_constraintTop_toBottomOf="@+id/setting_moreTitle" />

    <TextView
        android:id="@+id/setting_darkMode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Dark Mode"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_line3" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/setting_darkmode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        app:layout_constraintBottom_toBottomOf="@+id/setting_darkMode_title"
        app:layout_constraintStart_toEndOf="@+id/setting_darkMode_title"
        app:layout_constraintTop_toTopOf="@+id/setting_darkMode_title"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/setting_lang_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Language"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/setting_darkMode_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/setting_darkMode_title"
        app:layout_constraintTop_toBottomOf="@+id/setting_darkMode_title" />

    <TextView
        android:id="@+id/setting_help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Help"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/setting_lang_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/setting_lang_title"
        app:layout_constraintTop_toBottomOf="@+id/setting_lang_title" />

    <TextView
        android:id="@+id/setting_feedback_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Feedback"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/setting_help_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/setting_help_title"
        app:layout_constraintTop_toBottomOf="@+id/setting_help_title" />

    <ImageButton
        android:id="@+id/setting_lang_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/setting_lang_title"
        app:layout_constraintStart_toEndOf="@+id/setting_lang_title"
        app:layout_constraintTop_toTopOf="@+id/setting_lang_title"
        app:layout_constraintVertical_bias="0.437"
        app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />

    <ImageButton
        android:id="@+id/setting_help_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/setting_help_title"
        app:layout_constraintEnd_toEndOf="@+id/setting_lang_btn"
        app:layout_constraintStart_toStartOf="@+id/setting_lang_btn"
        app:layout_constraintTop_toTopOf="@+id/setting_help_title"
        app:layout_constraintVertical_bias="0.687"
        app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />

    <ImageButton
        android:id="@+id/setting_feedback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/setting_feedback_title"
        app:layout_constraintEnd_toEndOf="@+id/setting_help_btn"
        app:layout_constraintStart_toStartOf="@+id/setting_help_btn"
        app:layout_constraintTop_toTopOf="@+id/setting_feedback_title"
        app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/white"
        android:padding="15dp"
        android:text="Logout"
        app:cornerRadius="35dp"
        android:textColor="@color/Secondary_color"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/setting_feedback_btn"
        app:layout_constraintStart_toStartOf="@+id/setting_feedback_title"
        app:layout_constraintTop_toBottomOf="@+id/setting_line3"
        app:layout_constraintVertical_bias="0.929" />

</androidx.constraintlayout.widget.ConstraintLayout>