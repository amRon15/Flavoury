<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/add_recipe_toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/add_recipe_cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter"
                android:text="Cancel"
                android:textColor="@color/mainText_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/add_recipe_saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Save"
                android:textColor="@color/Secondary_color"
                android:textSize="20dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_recipe_recipeImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="@color/outline_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_recipe_toolBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_rec_recipe_img"
                android:orientation="vertical"
                android:paddingVertical="100dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_photo_camera_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Press to add photo"
                    android:textColor="@color/mainText_color"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter"
                    android:text="(Please do not upload anything other than food)"
                    android:textColor="@color/secondaryText_color" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_recipe_recipeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/add_recipe_recipeImg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rec_recipe_card"
                android:orientation="vertical"
                android:paddingVertical="20dp">

                <TextView
                    android:id="@+id/add_recipe_recipeName_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/baseline_brunch_dining_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/mainText_color"
                    android:fontFamily="@font/inter"
                    android:text="Recipe Name"
                    android:textColor="@color/mainText_color"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_recipe_recipeImg" />

                <EditText
                    android:id="@+id/add_recipe_recipeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_light"
                    android:hint="Enter Recipe Name"
                    android:imeActionLabel="setRecipeName"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textColor="@color/mainText_color"
                    android:textColorHint="@color/secondaryText_color"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_recipe_recipeName_title" />


                <TextView
                    android:id="@+id/add_recipe_description_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/baseline_mode_edit_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/mainText_color"
                    android:fontFamily="@font/inter"
                    android:text="Description (Optional)"
                    android:textColor="@color/mainText_color"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_recipe_recipeName" />

                <EditText
                    android:id="@+id/add_recipe_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:fontFamily="@font/inter"
                    android:hint="Enter Description Here"
                    android:imeActionLabel="setDescription"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="5"
                    android:textColor="@color/mainText_color"
                    android:textColorHint="@color/secondaryText_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_recipe_description_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_recipe_recipeTime_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="20dp"
                            android:drawableStart="@drawable/baseline_access_time_24"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/mainText_color"
                            android:fontFamily="@font/inter"
                            android:text="Minutes"
                            android:textColor="@color/mainText_color"
                            android:textSize="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/add_recipe_recipeName" />

                        <Spinner
                            android:id="@+id/add_recipe_recipeTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:fontFamily="@font/inter"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/mainText_color"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/add_recipe_recipeTime_title" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_recipe_recipePortion_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="20dp"
                            android:drawableStart="@drawable/baseline_scale_24"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/mainText_color"
                            android:fontFamily="@font/inter"
                            android:text="Portion Size"
                            android:textColor="@color/mainText_color"
                            android:textSize="20dp" />

                        <Spinner
                            android:id="@+id/add_recipe_recipePortion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:fontFamily="@font/inter"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/mainText_color" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/add_recipe_ingredient_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_recipe_recipeInfo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/baseline_food_bank_24"
                android:drawablePadding="5dp"
                android:drawableTint="@color/mainText_color"
                android:fontFamily="@font/inter"
                android:text="Ingredient"
                android:textColor="@color/mainText_color"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/add_recipe_add_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_add_24"
                app:tint="@color/primary_color" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_recipe_ingredientBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/add_recipe_ingredient_title">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/add_recipe_ingredient_recyclerView"
                android:layout_width="match_parent"
                android:background="@drawable/round_rec_recipe_card"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_recipe_ingredient_title" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/add_recipe_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_recipe_ingredientBox">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/baseline_assignment_24"
                android:drawablePadding="5dp"
                android:drawableTint="@color/mainText_color"
                android:fontFamily="@font/inter"
                android:text="Step"
                android:textColor="@color/mainText_color"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/add_recipe_add_step"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_add_24"
                app:tint="@color/primary_color" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_recipe_step_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_recipe_step_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>