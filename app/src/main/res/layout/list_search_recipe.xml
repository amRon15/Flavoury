<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_recipe_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/search_recipe_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/rounded_rec_recipe_img"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundImageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"
            android:lines="1"
            android:text="Recipe Name"
            android:textColor="@color/mainText_color"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_recipe_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Category"
                android:textColor="@color/secondaryText_color"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/home_list_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/baseline_brightness_1_8" />

            <TextView
                android:id="@+id/search_recipe_cookingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:text=">120 mins"
                android:textColor="@color/secondaryText_color"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/search_recipe_userIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/circle_user_icon"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_24_grey"
                app:shapeAppearanceOverlay="@style/circleImageView" />

            <TextView
                android:id="@+id/search_recipe_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:lines="1"
                android:text="UserName"
                android:textColor="@color/mainText_color"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>