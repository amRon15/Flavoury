<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="25dp"
        >

        <EditText
            android:id="@+id/add_recipe_ingredient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:maxLength="20"
            android:longClickable="false"
            android:imeOptions="actionDone"
            android:imeActionLabel="setIngredient"
            android:inputType="text"
            android:textColor="@color/mainText_color"
            android:fontFamily="@font/inter"
            android:hint="Enter Ingredient"
            android:textColorHint="@color/secondaryText_color"
            />

        <EditText
            android:id="@+id/add_recipe_portion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:textSize="18dp"
            android:imeActionLabel="setPortion"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:longClickable="false"
            android:hint="Enter Portion"
            android:textColorHint="@color/secondaryText_color"
            android:textColor="@color/mainText_color"
            android:fontFamily="@font/inter" />

    <ImageButton
        android:id="@+id/add_recipe_ingredient_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/baseline_remove_24"
        android:background="@android:color/transparent"
        app:tint="@color/Secondary_color" />


    </LinearLayout>
