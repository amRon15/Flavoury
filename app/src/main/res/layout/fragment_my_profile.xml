<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myProfile.MyProfileFragment">


    <ImageButton
        android:id="@+id/my_profile_addRecipe"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/mainText_color" />

    <ImageButton
        android:id="@+id/my_profile_sharingButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/baseline_share_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toEndOf="@id/my_profile_addRecipe"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/mainText_color" />

        <ImageView
            android:id="@+id/my_profile_userIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_rectangle_shape"
            android:contentDescription="@string/description"
            android:scaleType="centerCrop"
            app:circularflow_defaultRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_profile_sharingButton"/>

    <TextView
        android:id="@+id/my_profile_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/mainText_color"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_userIcon" />

    <TextView
        android:id="@+id/my_profile_recipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/mainText_color"
        android:text="Recipe"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_userName" />

    <TextView
        android:id="@+id/my_profile_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="132dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/mainText_color"
        android:text="Like"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_userName" />

    <TextView
        android:id="@+id/my_profile_recipeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="0"
        android:textColor="@color/mainText_color"
        app:layout_constraintBottom_toTopOf="@+id/my_profile_recipeTitle"
        app:layout_constraintEnd_toEndOf="@+id/my_profile_recipeTitle"
        app:layout_constraintStart_toStartOf="@+id/my_profile_recipeTitle" />

    <TextView
        android:id="@+id/my_profile_likeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="0"
        android:textColor="@color/mainText_color"
        app:layout_constraintBottom_toTopOf="@+id/my_profile_like"
        app:layout_constraintEnd_toEndOf="@+id/my_profile_like"
        app:layout_constraintStart_toStartOf="@+id/my_profile_like" />

    <ImageButton
        android:id="@+id/my_profile_setting"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="#FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/title_setting"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintStart_toEndOf="@+id/my_profile_sharingButton"
        app:layout_constraintTop_toTopOf="@+id/my_profile_sharingButton"
        app:tint="@color/mainText_color" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_profile_recipe_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingBottom="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_recipeTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>