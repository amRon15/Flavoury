<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rec_dialog_search_box"
    android:layout_marginBottom="100dp"
    android:paddingBottom="200dp"
    android:layout_marginHorizontal="20dp">

    <LinearLayout
        android:id="@+id/search_user_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rec_search_card"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="138dp">

        <EditText
            android:id="@+id/search_user_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:fontFamily="@font/inter"
            android:hint="Search User..."
            android:lines="1"
            android:textColor="@color/mainText_color"
            android:textColorHint="@color/secondaryText_color"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/search_user_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_back_btn"
            android:backgroundTint="@color/primary_color"
            android:src="@drawable/baseline_search_24"
            app:tint="@color/white" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/search_user_box"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_rec_history_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search History"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Clear"
                    android:textSize="18dp"
                    android:textColor="@color/Secondary_color"
                    />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                app:dividerColor="@color/lightGrey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_user_history_null"
                android:text="No Search History"
                android:layout_gravity="center"
                android:textColorHint="@color/mainText_color"
                android:textSize="18dp"
                android:paddingVertical="30dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_recipe_history"
                android:layout_margin="10dp"/>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>