<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_userIcon"
        android:layout_width="152dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/description"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_background"
            android:src="@drawable/ivysoo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profile_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/ivy_so"
        android:textColor="#202321"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_userIcon" />

    <TextView
        android:id="@+id/profile_recipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/Recipes"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_userName" />

    <TextView
        android:id="@+id/profile_likesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Likes"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toEndOf="@+id/profile_recipeTitle"
        app:layout_constraintTop_toBottomOf="@+id/profile_userName" />

    <TextView
        android:id="@+id/profile_recipeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="23"
        android:textColor="#202321"
        app:layout_constraintBottom_toTopOf="@+id/profile_recipeTitle"
        app:layout_constraintEnd_toEndOf="@+id/profile_recipeTitle"
        app:layout_constraintStart_toStartOf="@+id/profile_recipeTitle" />

    <TextView
        android:id="@+id/profile_likesNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="354"
        android:textColor="#202321"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintBottom_toTopOf="@+id/profile_likesTitle"
        app:layout_constraintEnd_toEndOf="@+id/profile_likesTitle"
        app:layout_constraintStart_toStartOf="@+id/profile_likesTitle" />


    <Button
        android:id="@+id/profile_followBtn"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/profile_follow_btn"
        android:text="follow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_myRecyclerView"
        android:layout_width="410dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_height="351dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_followBtn"
        app:layout_constraintStart_toStartOf="@+id/profile_followBtn"
        app:layout_constraintTop_toBottomOf="@+id/profile_followBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>