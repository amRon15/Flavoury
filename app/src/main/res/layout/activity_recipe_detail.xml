<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/recipe_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/recipe_detail_backBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/baseline_arrow_back_ios_new_24" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/recipe_detail_shareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_share_24" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_detail_editBtn"
                android:layout_marginStart="20dp"
                android:background="@drawable/baseline_mode_edit_24"
                android:visibility="gone"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/recipe_detail_recipeImg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/rounded_rec_recipe_img"
            android:hapticFeedbackEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_toolbar" />

        <TextView
            android:id="@+id/recipe_detail_recipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/inter_medium"
            android:text="Recipe Name"
            android:textColor="@color/mainText_color"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_recipeImg" />


        <LinearLayout
            android:id="@+id/recipe_detail_infoBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipe_detail_recipeName">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/recipe_detail_cookingMins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/baseline_access_time_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/inter_light"
                    android:textSize="16dp"
                    android:text=">120 mins"
                    android:gravity="center_vertical"
                    android:textColor="@color/mainText_color" />

                <TextView
                    android:id="@+id/recipe_detail_calsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_flash_on_24"
                    android:drawableTint="@color/Secondary_color"
                    android:fontFamily="@font/inter_light"
                    android:gravity="center_vertical"
                    android:text="123cals"
                    android:textColor="@color/secondaryText_color"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp">

                <ImageButton
                    android:id="@+id/my_profile_userIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circle_user_icon" />

                <TextView
                    android:id="@+id/recipe_detail_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Username"
                    android:paddingLeft="5dp"
                    android:textColor="@color/mainText_color"
                    android:textSize="18dp"
                    android:layout_weight="1"/>

                <ToggleButton
                    android:id="@+id/recipe_detail_likeToggle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_like"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/recipe_detail_likeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:paddingLeft="5dp"
                    android:text="123"
                    android:textColor="@color/mainText_color"
                    android:textSize="18dp" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/recipe_detail_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Description"
            android:textColor="@color/mainText_color"
            android:textSize="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_infoBox" />

        <TextView
            android:id="@+id/recipe_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="35dp"
            android:fontFamily="@font/inter_light"
            android:text="Your recipe has been uploaded, you can see it on your profile."
            android:textColor="@color/secondaryText_color"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_description_title" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/recipe_detail_line1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_description" />


        <TextView
            android:id="@+id/recipe_detail_ingredients_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_medium"
            android:text="Ingredients"
            android:textColor="@color/mainText_color"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_line1" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_detail_ingredients_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_ingredients_title" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/recipe_detail_line3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_ingredients_recyclerView" />

        <TextView
            android:id="@+id/recipe_detail_step_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_medium"
            android:text="Step"
            android:textColor="@color/mainText_color"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_line3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_detail_step_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="75dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_step_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>





