<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipe_detail_recipeImg"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@color/white"
        android:hapticFeedbackEnabled="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baked_pork_chop_rice" />

    <ImageButton
        android:id="@+id/recipe_detail_back_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/circle_backbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recipe_detail_recipeImg"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />


        <TextView
            android:id="@+id/recipe_detail_recipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="400dp"
            android:fontFamily="@font/inter_medium"
            android:text="Baked Pork Chop Rice"
            android:textColor="@color/mainText_color"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_recipeImg"
            app:layout_constraintVertical_bias="0.045" />

        <ImageView
            android:id="@+id/recipe_detail_timeIcon"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/recipe_detail_calsIcon"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_recipeName"
            app:srcCompat="@drawable/baseline_access_time_24" />


        <TextView
            android:id="@+id/recipe_detail_cookingMins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_light"
            android:text="150 mins"
            android:textColor="@color/mainText_color"
            app:layout_constraintStart_toEndOf="@+id/recipe_detail_timeIcon"
            app:layout_constraintTop_toBottomOf="@id/recipe_detail_recipeName" />

        <TextView
            android:id="@+id/recipe_detail_calsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:drawableStart="@drawable/baseline_flash_on_24"
            android:drawableTint="@color/Secondary_color"
            android:fontFamily="@font/inter_light"
            android:text="1100 cals"
            android:textColor="@color/secondaryText_color"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipe_detail_recipeName" />

        <androidx.cardview.widget.CardView
                    android:id="@+id/recipe_detail_userIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipe_detail_calsNum">


                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:contentDescription="@string/description"
                        android:src="@drawable/speed"
                        tools:layout_editor_absoluteX="95dp"
                        tools:layout_editor_absoluteY="478dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/recipe_detail_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="265dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Speed"
                    android:textColor="@color/mainText_color"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/recipe_detail_userIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/recipe_detail_userIcon"
                    app:layout_constraintTop_toTopOf="@+id/recipe_detail_userIcon" />

                <ImageButton
                    android:id="@+id/recipe_detail_like_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#00FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/recipe_detail_userIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/recipe_detail_userName"
                    app:layout_constraintTop_toTopOf="@+id/recipe_detail_userIcon"
                    app:srcCompat="@drawable/baseline_favorite_border_24" />

                <TextView
                    android:id="@+id/recipe_detail_likeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="273 Likes"
                    android:textColor="@color/mainText_color"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/recipe_detail_like_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/recipe_detail_like_btn"
                    app:layout_constraintTop_toTopOf="@+id/recipe_detail_like_btn" />


        <View
            android:id="@+id/recipe_detail_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/secondaryText_color"
            android:outlineAmbientShadowColor="@color/secondaryText_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_userName"
            app:layout_constraintVertical_bias="0.039" />

        <TextView
                    android:id="@+id/recipe_detail_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Desciption"
                    android:textColor="@color/mainText_color"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/recipe_detail_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.081"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipe_detail_line1"
                    app:layout_constraintVertical_bias="0.526" />

                <TextView
                    android:id="@+id/recipe_detail_description"
                    android:layout_width="363dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/inter_light"
                    android:text="Your recipe has bewen uploaded, you can see it on your profile. Your recipe has been uploaded, you can see it on your profile."
                    android:textColor="@color/secondaryText_color"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipe_detail_line1" />

        <View
            android:id="@+id/recipe_detail_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/secondaryText_color"
            android:outlineAmbientShadowColor="@color/secondaryText_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_description"
            app:layout_constraintVertical_bias="0.036" />

        <TextView
                    android:id="@+id/recipe_detail_ingredients_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Ingredients"
                    android:textColor="@color/mainText_color"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.082"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipe_detail_line2" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_detail_ingredients_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_ingredients_title"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/recipe_detail_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:background="@color/secondaryText_color"
            android:outlineAmbientShadowColor="@color/secondaryText_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_ingredients_recyclerView" />

        <TextView
            android:id="@+id/recipe_detail_step_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_medium"
            android:text="Step"
            android:textColor="@color/mainText_color"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_line3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_detail_step_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="75dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_detail_step_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>





