<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/home_pop_list_userName"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/inter"
        android:text="User"
        android:lines="1"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:textColor="@color/mainText_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/home_pop_list_userImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textEnd"
        android:background="@drawable/round_rectangle_shape"

        />

    <ImageButton
        android:id="@+id/home_pop_list_recipeImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_pop_list_userImg"
        android:background="@drawable/round_rectangle_shape"/>

    <TextView
        android:id="@+id/home_pop_list_recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Salad"
        android:textSize="16sp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_pop_list_recipeImg" />

    <TextView
        android:id="@+id/home_pop_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/baseline_access_time_24"
        android:drawableTint="@color/cal_color"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="280 Mins"
        android:textColor="@color/secondaryText_color"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_pop_list_recipeName" />

    <ToggleButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/home_pop_likeToggle"
        android:background="@drawable/toggle_select"
        app:layout_constraintEnd_toStartOf="@id/home_pop_list_like"
        app:layout_constraintTop_toBottomOf="@+id/home_pop_list_recipeName"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:textOn=""
        android:textOff="" />

    <TextView
        android:id="@+id/home_pop_list_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="103"
        android:textColor="@color/secondaryText_color"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintTop_toBottomOf="@+id/home_pop_list_recipeName" />

</androidx.constraintlayout.widget.ConstraintLayout>